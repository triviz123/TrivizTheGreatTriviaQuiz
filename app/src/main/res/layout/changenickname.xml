<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the new nickname:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/m_semibold"
            android:textColor="#5C9DFF"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:id="@+id/new_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New nickname"
            android:textColorHint="#B45C9DFF"
            android:textSize="13sp"
            android:text=""
            android:textColorHighlight="#B45C9DFF"
            android:textColorLink="#B45C9DFF"
            android:textColor="#5C9DFF"
            android:textStyle="bold"
            android:inputType="text"
            android:fontFamily="@font/m_semibold"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="60dp"/>

        <Button
            android:id="@+id/changenickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:textColor="@android:color/white"
            android:text="Save"
            android:fontFamily="@font/m_semibold"
            android:background="@drawable/music_toggle"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>